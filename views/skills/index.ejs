<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>skills</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
  <ul>
    <% skills.forEach(function(skill) { %>
      <li>
        <form 
          action="/skills/<%= skill._id %>?_method=DELETE"
          class="delete-form"
          method="POST"
        >
          <button type="submit">X</button>
        </form>
        <a href="/skills/<%= skill._id %>"><%= skill.theSkill %></a>
          - 
        <%= skill.know ? 'know' : 'do not know' %>
      </li>
    <% }) %>
  </ul>
  <a href="/skills/new">Add skill</a>
</body>
</html>